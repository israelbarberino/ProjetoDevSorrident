@model DevSorrident.Models.ModelDentista

@{
    ViewBag.Title = "Cadastrar Nova Especialidade";
}
<h2 style="text-align:center;">Cadastro de Dentista</h2>

<div class="center">
    @using (Html.BeginForm("CadDentista", "Adm", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group space-around-flex">
                <div class="">
                    @Html.LabelFor(model => model.nomeDen, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomeDen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nomeDen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group space-around-flex">
                <div class="">
                    @Html.LabelFor(model => model.codEsp, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="">
                    @Html.DropDownList("Especialidade", "Escolha a Especialidade")
                </div>
            </div>

            <div class="form-group center">
                <div class="col-md-10">
                    @ViewBag.msg <br />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar Dentista" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>

<fotter margin-top="20px">
    <br /><br />
    <button>@Html.ActionLink("Voltar", "Home", "Home")</button>
</fotter>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



