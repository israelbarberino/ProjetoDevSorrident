@model DevSorrident.Models.ModelDentista

@{
    ViewBag.Title = "Editar Especialidade";
}

<h2 style="text-align:center; margin-top:200px;">Editar Dentista</h2> <!-- finalizar edição de dentistas -->

<div class="center">
    @using (Html.BeginForm("EditarDentista", "Consulta", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group space-around-flex">
                <div class="black">
                    @Html.LabelFor(model => model.nomeDen, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomeDen, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome" } })
                    @Html.ValidationMessageFor(model => model.nomeDen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group space-around-flex">
                <div class="black">
                    @Html.LabelFor(model => model.especialidade, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.especialidade, new { htmlAttributes = new { @class = "form-control", disabled = "" } })
                    @Html.ValidationMessageFor(model => model.especialidade, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group space-around-flex">
                <div class="black">
                    @Html.LabelFor(model => model.codEsp, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("especialidade", null, htmlAttributes: new { @required = "required" })
                </div>
            </div>

            <div class="form-group center">
                <div class="col-md-10">
                    @ViewBag.msg <br />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar Dentista" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}